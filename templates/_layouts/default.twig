<!doctype html>
<html lang="en-GB" dir="ltr">
  {% set polyfills = [
    'Array.prototype.find',
    'Promise',
  ] %}

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script crossorigin="anonymous" src="https://polyfill.io/v3/polyfill.min.js?features={{ polyfills|join('%2C') }}"></script>
    
    <link rel="apple-touch-icon" sizes="180x180" href="{{ siteUrl }}apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ siteUrl }}favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ siteUrl }}favicon-16x16.png">
    <link rel="manifest" href="{{ siteUrl }}site.webmanifest">
    <link rel="mask-icon" href="{{ siteUrl }}safari-pinned-tab.svg" color="#009eb4">
    <meta name="msapplication-TileColor" content="#ffc40d">

    {{ craft.twigpack.includeCssModule("main.css") }}
  </head>

  <body>
    <div class="sprite">
      {{ craft.twigpack.includeFileFromManifest("sprite.svg") }}
    </div>

    {# Give JS access to some stuff #}
    <div id="data" data-site-url="{{ siteUrl }}"></div>

    <div class="overflow-wrapper">
      <header>
        <div class="container">
          <div class="d-flex justify-content-between">
            <img src="{{ craft.twigpack.getModuleUri('craft.svg') }}" alt="Brandy Wandy">

            <nav>
              <a href="#">all</a>
              <a href="#">these</a>
              <a href="#">nav</a>
              <a href="#">items</a>
            </nav>
          </div>
        </div>
      </header>

      {% block content %}
        <h1>Add the content block coward</h1>
      {% endblock %}
    </div>

    {{ craft.twigpack.includeJsModule("vendors~main.js") }}
    {{ craft.twigpack.includeJsModule("main.js") }}
  </body>
</html>
